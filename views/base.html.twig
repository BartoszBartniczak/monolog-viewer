<!DOCTYPE html>
{% set logLevelStyle = {
    100: {
    'icon': 'bug',
    'class' : 'debug'
    },
    200: {
    'icon': 'info-circle',
    'class' : 'info'
    },
    250: {
    'icon': 'file-text',
    'class' : 'notice'
    },
    300: {
    'icon': 'warning',
    'class' : 'warning'
    },
    400: {
    'icon': 'times-circle',
    'class' : 'error'
    },
    500: {
    'icon': 'fire',
    'class' : 'critical'
    },
    550: {
    'icon': 'bell',
    'class' : 'alert'
    },
    600: {
    'icon': 'flash',
    'class' : 'emergency'
    }
} %}
<html>
<head>
    <title>{% block title %}Syonix Monolog Viewer{% endblock %}</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta charset="utf-8">
    <!-- Bootstrap -->
    <link href="{{ app.request.baseUrl }}/web/res/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen">
    <link href="http://cdn.syonix.ch/fonts/flexo/1.0/flexo.css" rel="stylesheet" media="screen">
    <link href="http://cdn.syonix.ch/fonts/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet" media="screen">
    <link href='http://fonts.googleapis.com/css?family=Source+Code+Pro:400,700&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
    <link href="http://cdn.syonix.ch/js/slidebars/0.10.2/slidebars.min.css" rel="stylesheet">
    <link href="{{ app.request.baseUrl }}/web/css/screen.css" rel="stylesheet" media="screen">
    <link href="{{ app.request.baseUrl }}/web/css/790.css" rel="stylesheet" media="screen">
    <link href="{{ app.request.baseUrl }}/web/css/960.css" rel="stylesheet" media="screen">

    <!-- Apple Touch Icons -->
    <link rel="apple-touch-icon" href="{{ app.request.baseUrl }}/web/img/touch-icon-iphone.png">
    <link rel="apple-touch-icon" sizes="76x76" href="{{ app.request.baseUrl }}/web/img/touch-icon-ipad.png">
    <link rel="apple-touch-icon" sizes="120x120" href="{{ app.request.baseUrl }}/web/img/touch-icon-iphone-retina.png">
    <link rel="apple-touch-icon" sizes="152x152" href="{{ app.request.baseUrl }}/web/img/touch-icon-ipad-retina.png">

    <!-- Web App Tags -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta name="apple-mobile-web-app-title" content="Log Viewer">
    <meta name="mobile-web-app-capable" content="yes">
    <link rel="apple-touch-startup-image" href="{{ app.request.baseUrl }}/web/img/touch-startup-ipad-portrait.png"    sizes="768x1004" media="screen and (min-device-width: 481px) and (max-device-width: 1024px) and (orientation:portrait)" />
    <link rel="apple-touch-startup-image" href="{{ app.request.baseUrl }}/web/img/touch-startup-ipad-landscape.png"     sizes="1024x748" media="screen and (min-device-width: 481px) and (max-device-width: 1024px) and (orientation:landscape)" />

    <!-- Favicon -->
    <link rel="shortcut icon" href="{{ app.request.baseUrl }}/web/favicon.ico"/>
</head>
<body>
{% block body %}
{% block navigation_wrapper %}
    <nav id="navigation" class="sb-slidebar sb-left sb-momentum-scrolling">
    {% block navigation %}{% endblock %}
</nav>
{% endblock %}
<div id="sb-site">
    <header id="header" class="clearfix">
        {% block header %}
        <a href="{{ path("home") }}"><img class="logo" src="{{ app.request.baseUrl }}/web/img/logo.png" alt="Syonix" width="102" height="32"></a>
        {% endblock %}
    </header>
    {% block content_wrap %}
        <div id="content">
            {% block content %}{% endblock %}
        </div>
        <header id="logs">
            {% block logslist %}{% endblock %}
        </header>
    {% endblock %}
</div>
<div id="filter-menu" class="sb-slidebar sb-right sb-momentum-scrolling">
    {% block filter_sidebar %}{% endblock %}
</div>
{% endblock %}
{% block scripts %}
    <script src="{{ app.request.baseUrl }}/web/res/jquery/jquery-2.0.3.min.js"></script>
    <script src="{{ app.request.baseUrl }}/web/res/jquery/jquery.stayInWebApp.min.js"></script>
    <script src="http://cdn.syonix.ch/js/slidebars/0.10.2/slidebars.min.js"></script>
    <script src="{{ app.request.baseUrl }}/web/res/retina.js"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            $.stayInWebApp();
            $.slidebars({
                disableOver: 790
            });
            $(".show-if-js").removeClass('show-if-js');
            $(".hide-if-js").hide();
        });
    </script>
{% endblock %}
</body>
</html>
